<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bagikan_donasi"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Donasi"
        android:textSize="8pt"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Penggalang Dana"
        android:textSize="10pt"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textStyle="bold"
        android:text="Tulis Komentar (Opsional)"/>


      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/custom_sign_up">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Tulis Dukungan atau doa untuk penggalangan dana ini. contoh: semoga cepat sembuh"/>

      </FrameLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Pilih Metode Pembayaran"
          android:textStyle="bold"
          android:textSize="10pt"/>

    <RadioGroup
        android:id="@+id/radioGroupNb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/BNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BNI"/>

        <RadioButton
            android:id="@+id/BCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BCA"/>

        <RadioButton
            android:id="@+id/BRI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRI" />
        <RadioButton
            android:id="@+id/Mandiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mandiri"/>

    </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Lanjutkan Pembayaran"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:onClick="buatdonasi"/>
    </LinearLayout>
</ScrollView>